{
  "name": "todo-server",
  "version": "1.0.0",
  "main": "build/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.6.1",
    "@types/cors": "^2.8.7",
    "concurrently": "^6.2.1",
    "@types/pg": "^7.14.5",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "knex": "^0.95.7",
    "pg": "^8.3.3",
    "dotenv": "^8.2.0"
  },
  "scripts": {
    "build:dev": "tsc -w",
    "run:dev": "nodemon ./build/index.js",
    "start:dev": "concurrently yarn:build:dev yarn:run:dev",
    "build:prod": "tsc",
    "start": "node ./build/index.js",
    "migrate:run": "knex migrate:latest --knexfile ./src/knex/knexConfig.cli.ts",
    "migrate:make": "knex migrate:make --knexfile ./src/knex/knexConfig.ts",
    "migrate:rollback": "knex migrate:rollback --all --knexfile ./src/knex/knexConfig.cli.ts",
    "migrate:list": "knex migrate:list --knexfile ./src/knex/knexConfig.cli.ts",
    "seed:run": "knex seed:run --knexfile ./src/knex/knexConfig.ts",
    "migrate:reset": "yarn run migrate:rollback && yarn run migrate:run && yarn run seed:run"
  }
}
